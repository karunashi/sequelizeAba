<h1 class="jumbotron text-center">Evolution - New. Enhanced. Improved.</h1>
<div class="row container">
<div class="well col-lg-4 col-md-4 col-sm-4 col-xs-12">
<h2 class="text-center">Unacquired Biomass</h2>

<ul>
  {{#each burger_data}}
    {{#unless this.consumed}}
      <li>
        {{this.name}} 
        <form method="POST" action="/burgers/update?_method=PUT" value={{this.id}} name="burger_id"><button>Consume</button></form>
      </li>
    {{/unless}}
  {{/each}}
</ul>
</div>
<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 form-group">
  <form action="/burgers/create" method="POST">
    <textarea class="form-control" rows="6" id="name textbox" name="name" type="text" placeholder="Identify New Strain Here. In order to reach ultimate evolution for the Swarm."></textarea>
    <div class="row">
    <button type="submit" class="btn-default" id="targetStrain">Target Strain</button>
    </div>
  </form>
</div>
<div class="well col-lg-4 col-md-4 col-sm-4 col-xs-12">
<h2 class="text-center">Acquired Biomass</h2>

<ul>
  {{#each burger_data}}
    {{#if this.consumed}}
      <li>
        {{this.name}}
      </li>
    {{/if}}
  {{/each}}
</ul>
</div>
</div>